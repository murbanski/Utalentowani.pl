<% provide(:title, 'Zarejestruj się') %>
<h1>Rejestracja</h1>
<div class="logowanie">
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>
		
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Utwórz Moje Konto", class: "btn btn-large btn-success" %>
		<% end %>
	</div>
</div>
</div>